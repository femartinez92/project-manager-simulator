<p>
	<h3>Lista de precedencias</h3>
</p>

<table>
	<thead>
		<th>Tarea predecesora</th>
		<th>Tarea dependiente</th>
	</thead>
	<tbody>
		<% @precedents.each do |precedent| %>
		<tr>
			<td><%= @tasks.where(id: precedent.predecessor_id).first.name if @tasks.where(id: precedent.predecessor_id).first %> </td>
			<td>
				<%= @tasks.where(id: precedent.dependent_id).first.name if @tasks.where(id: precedent.dependent_id).first %>
				
			</td>
		</tr>
		<% end -%>
	</tbody>
</table>

