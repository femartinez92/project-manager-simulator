
<h1>Listado de hitos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Fecha de término</th>
      <th colspan="3"> Acciones </th>
    </tr>
  </thead>

  <tbody>
    <% @milestones.each do |milestone| %>
      <tr>
        <td><%= milestone.name %></td>
        <td><%= milestone.description %></td>
        <td><%= milestone.due_date %></td>
        <td>
          <ul class='button-group radius'>
            <li><%= link_to 'Ver detalles', project_milestone_path({ :project_id => @project.id, :id => milestone.id}), { class: 'button info tiny' }%></li>
            <li><%= link_to 'Editar', edit_project_milestone_path({ :id => milestone.id, :project_id => @project.id}), { class: 'button secondary tiny' }%></li>
            <li><%= link_to 'Eliminar', project_milestone_path({ :id => milestone.id, :project_id => @project.id}), class: 'button alert tiny' , method: :delete, data: { confirm: 'Are you sure?' }%></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Milestone', new_project_milestone_path %>
