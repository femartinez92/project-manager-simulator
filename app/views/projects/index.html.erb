<!-- In case the project manager has already selected a project we list the project,
	 on the other hand he/she can pick a project from the admin and duplicate it -->
<%- if ( @projects.length > 0 or @admin ) %>
  <%= render 'your_projects', locals: { projects: @projects, title: 'Tus proyectos' } %>
<% else %>
  <%= render 'add_new_project', locals: { admin_projects: @admin_projects } %>
<% end -%>

<br>
<%- if @admin %>
  <%= render 'your_projects', locals: { projects: @cloned_projects, title: 'Proyectos clonados'} %>
  <%= link_to 'Nuevo proyecto de administrador', new_project_path, class: 'button tiny success' %>
<% end -%>
