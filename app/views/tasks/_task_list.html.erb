<% tasks = locals[:tasks]%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <%- if @project.modificable? %>
      <th>Min (días) </th>
      <th>Moda (días) </th>
      <th>Max (días)</th>
      <% end -%>
      <th>Estimación duración (días)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <%- if @project.modificable? %>
        <td><%= task.min_duration %></td>
        <td><%= task.most_probable_duration %></td>
        <td><%= task.max_duration %></td>
        <% end -%>
        <td><%= task.pm_duration_estimation%></td>
        <td><ul class='button-group radius'>
            <li><%= link_to 'Ver detalles', project_milestone_task_path({ :project_id => @project.id, :milestone_id => @milestone.id, :id => task.id }), { class: 'button info tiny' }%></li>
            <li>
              <a href="#" data-reveal-id="estimar-<%= task.id%>" class="radius button tiny secondary">Estimar</a>
            </li>
            <li><%= link_to 'Eliminar', project_milestone_task_path({ :project_id => @project.id, :milestone_id => @milestone.id, :id => task.id }), class: 'button alert tiny' , method: :delete, data: { confirm: 'Estas seguro que deseas elimienar esta tarea?' } if @project.modificable? %></li>
          </ul>
        </td>
      </tr>
      <!-- modal -->
      <div id="estimar-<%= task.id%>" class="reveal-modal" data-reveal aria-labelledby="task-<%= task.id%>-title" aria-hidden="true" role="dialog">
        <h2 id="task-<%= task.id%>-title">Estimar duración</h2>
        <%= form_tag estimate_duration_project_milestone_task_path({:project_id => @project.id, :milestone_id => @milestone.id, :id => task.id }) %>
          <div class="field">
            <%= number_field_tag :pm_duration_estimation %>
          </div>
           <%= submit_tag 'Estimar', { class: 'button success tiny' } %> 
        <a class="close-reveal-modal" aria-label="Close">&#215;</a>
      </div>
    <% end %>
  </tbody>
</table>