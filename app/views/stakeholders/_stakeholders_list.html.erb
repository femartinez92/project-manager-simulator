<% stakeholders = locals[:stakeholders] %>
<table>
	<caption> Interesados </caption>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Influencia</th>
      <th>Poder</th>
      <th>Nivel de compromiso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% if stakeholders then
    	stakeholders.each do |stakeholder| %>
      <tr>
        <td><%= stakeholder.name %></td>
        <td><%= stakeholder.influence %></td>
        <td><%= stakeholder.power %></td>
        <td><%= stakeholder.commitment_level %></td>
        <td><%= link_to 'Show', stakeholder %></td>
        <td><%= link_to 'Edit', edit_stakeholder_path(stakeholder) %></td>
        <td><%= link_to 'Destroy', stakeholder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end 
    end%>
  </tbody>
</table>